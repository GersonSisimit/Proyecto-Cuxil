@{
    ViewData["Title"] = "Definir Detalles";


}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @*            <button id="myButton" class="btn btn-primary">Mostrar SweetAlert</button>
            *@     Gestion De Detalles De Productos
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-4">
                <div class="box box-info animated slideInRight">
                    <div class="box-header with-border">
                        <h3 class="box-title"><i class="fa fa-cubes"></i> Productos</h3>
                    </div>
                    <div class="box-body">
                        <!-- Contenido relacionado con los productos -->
                        <table class="table table-hover">
                            <tbody>
                                <tr>
                                    <td>Marca de productos</td>
                                    <td class="text-right">
                                        <a href="@Url.Action("MarcaProductos", "Productos")" class="btn btn-default">
                                            <i class="fa fa-shopping-bag" aria-hidden="true"></i>
                                        </a>
                                    </td>

                                </tr>
                                <tr>
                                    <td>Tipos de producto</td>
                                    <td class="text-right">
                                        <a href="@Url.Action("TipoProducto", "Productos")" class="btn btn-default">
                                            <i class="fa fa-plus" aria-hidden="true"></i>
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Subtipos de producto</td>
                                    <td class="text-right">
                                        <a href="@Url.Action("SubtipoProducto", "Productos")" class="btn btn-default">
                                            <i class="fa fa-sitemap" aria-hidden="true"></i>
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Presentaciones Producto</td>
                                    <td class="text-right">
                                        <a href="@Url.Action("PresentacionesProducto", "Productos")" class="btn btn-default">
                                            <i class="fa fa-shopping-basket" aria-hidden="true"></i>
                                        </a>
                                    </td>
                                </tr>
                                <!-- Add other rows here -->
                            </tbody>
                        </table>
                    </div>
                </div>
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
@section Scripts {
    <script src="~/plugins/sweetalert2/sweetalert2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myButton').click(function () {
                Swal.fire({
                    title: 'SweetAlert!',
                    text: '¡Este es un mensaje de SweetAlert!',
                    icon: 'success',
                    confirmButtonText: 'Aceptar'
                });
            });
        });
    </script>
}
@section Styles {
    <link href="~/plugins/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
}
